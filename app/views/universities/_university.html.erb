<div id="<%= dom_id university %>">
  <p>
    <strong>University Name:</strong>
    <%= university.University %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this university", university, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this university", edit_university_path(university), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
