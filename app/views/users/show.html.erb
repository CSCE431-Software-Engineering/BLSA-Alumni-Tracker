<% button_class="shadow focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>

<div class="m-4">
  <div class="flex justify-between">
    <h1 class="text-2xl">User Information</h1>
    <div class="m-4">
      <% if current_user_is_admin? %>
      <%= link_to "Edit User", edit_user_path(@user), class: "m-4 bg-blue-500 hover:bg-blue-700 #{button_class}" %>
      <%= link_to "Delete User", delete_user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "m-4 bg-red-500 hover:bg-red-700 #{button_class}" %>
      <% end %>
    </div>
  </div>
  <%= render @user %>

  <div>
    <div>
      <%= link_to users_path, class: "underline" do %>
        <span>&#8592;</span> <%= "Back to users" %>
      <% end %>
    </div>
  </div>
</div>