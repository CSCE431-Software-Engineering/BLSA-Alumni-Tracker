<% button_class="shadow focus:shadow-outline focus:outline-none text-white py-2 px-4 bg-tamu-maroon text-white rounded-md hover:bg-tamu-dark-maroon" %>

<div class="m-4">
  <% if notice.present? %>
    <p style="color: green" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between">
    <h1 class="font-bold text-2xl">University List</h1>
    <div>
      <%= link_to "New university", new_university_path, class: "m-4 #{button_class}" %>
    </div>
  </div>

  <div id="universities">
    <% @universities.each do |university| %>
      <div class="m-4">
        <%= link_to university do %>
          <%= render university %>
        <% end %>
        <hr>
      </div>
    <% end %>
  </div>
</div>
