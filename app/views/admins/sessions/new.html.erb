<div class="flex flex-col items-center justify-center h-screen bg-gray-100">
  <!-- Logo and title section -->
  <div class="mb-8 justify-center items-center">
    <%= image_tag "blsa_logo.png", alt: 'Your Logo', class: 'mb-4 h-40 w-40' %>
    <h2 class="text-center text-3xl font-bold text-gray-700">Please Sign In!</h2>
  </div>

  <!-- Sign in button section -->
  <div class="w-full max-w-sm">
    <%= button_to "Sign in with Google", admin_google_oauth2_omniauth_authorize_path, method: :post, class: "inline-flex items-center justify-center w-full px-4 py-3 border border-transparent rounded-md shadow-sm text-xl font-medium text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>
