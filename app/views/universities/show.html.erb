<% button_class="shadow focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>

<div class="m-4">
  <p style="color: green"><%= notice %></p>

  <div class="flex justify-between">
    <h1 class="font-bold text-2xl">University</h1>
    <div class="flex flex-row">
      <% if current_user_is_admin? %>
      <%= button_to "Edit", edit_university_path(@university), method: :get, class: "m-4 bg-blue-500 hover:bg-blue-700 #{button_class}" %>
      <%= button_to "Delete", university_path(@university), method: :delete, class: "m-4 bg-red-500 hover:bg-red-700 #{button_class}" %>
      <% end %>
    </div>
  </div>

  <%= render @university %>

  <div>
    <%= link_to universities_path, class: "underline" do %>
      <span>&#8592;</span> <%= "Back to universities" %>
    <% end %>
  </div>
</div>
