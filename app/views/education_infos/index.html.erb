<% button_styling="shadow focus:shadow-outline focus:outline-none text-white py-2 px-4 bg-tamu-maroon text-white rounded-md hover:bg-tamu-dark-maroon" %>

<div class="m-4">
  <div class="flex justify-between">
    <h1 class="font-bold text-2xl">My Education Information</h1>
    <div class="flex-initial justify-end">
      <div class="mb-2">Add Education: </div>
      <%= link_to "Undergraduate", new_education_info_path, class: "#{button_styling}" %>
      <%= link_to "Graduate", new_education_info_path, class: "#{button_styling}" %>
    </div>
  </div>
  
  <br>
  
  <div id="education_infos">
    <% if @education_infos.length == 0 %>
    <div class="text-center m-4">No Education Information Saved</div>
    <% end %>
    <% @education_infos.each do |education_info| %>
    <div class="m-4">
      <%= link_to education_info do %>
        <%= render education_info %>
      <% end %>
      <hr>
    </div>
    <% end %>
  </div>

</div>
